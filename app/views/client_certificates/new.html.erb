<section class="section">
  <h1 class="title">New Client Certificate</h1>
  <%= form_for(@cert, url: client_certificates_path(@cert.ca_name)) do |f| %>
    <div class="field">
      <label class="label">
        Name
      </label>
      <p class="control">
        <%= f.text_field :name, class: "input", required: "required" %>
      </p>
    </div>
    <div class="field">
      <label class="label">
        Common Name
      </label>
      <p class="control">
        <%= f.text_field :common_name, class: "input", required: "required" %>
      </p>
    </div>
    <div class="field">
      <label class="label">
        Pass Phrase
      </label>
      <p class="control">
        <%= f.password_field :pass_phrase, class: "input", required: "required" %>
      </p>
    </div>
    <div class="field">
      <p class="control">
        <%= f.submit "Create", class: "button is-primary" %>
      </p>
    </div>
  <% end %>
</section>
