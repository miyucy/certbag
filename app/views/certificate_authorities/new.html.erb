<section class="section">
  <div class="container">
    <h1 class="title">New Certificate Authority</h1>
    <%= form_for(@ca, url: certificate_authorities_path) do |f| %>
      <div class="field">
        <label class="label">
          Name
        </label>
        <p class="control">
          <%= f.text_field :name, class: "input", required: "required" %>
        </p>
      </div>
      <div class="field">
        <label class="label">
          Certificate
        </label>
        <p class="control">
          <%= f.text_area :certificate, class: "textarea", required: "required" %>
        </p>
      </div>
      <div class="field">
        <label class="label">
          Private Key
        </label>
        <p class="control">
          <%= f.text_area :private_key, class: "textarea", required: "required" %>
        </p>
      </div>
      <div class="field">
        <label class="label">
          Pass Phrase
        </label>
        <p class="control">
          <%= f.password_field :pass_phrase, class: "input", required: "required" %>
        </p>
      </div>
      <div class="field">
        <p class="control">
          <%= f.submit "Create", class: "button is-primary" %>
        </p>
      </div>
    <% end %>
  </div>
</section>
