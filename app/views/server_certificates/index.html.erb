<section class="section">
  <div class="container">
    <h1 class="title">Server Certificates</h1>
    <table class="table">
      <tbody>
        <% @certs.each do |cert| %>
          <tr>
            <td>
              <%= link_to cert.name, server_certificate_path(@ca.name, cert) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <p><%= link_to "New", new_server_certificate_path(@ca.name) %></p>
    <p><%= link_to "Back to #{@ca.name}", certificate_authority_path(@ca.name) %></p>
  </div>
</section>
