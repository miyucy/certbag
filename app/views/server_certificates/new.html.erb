<section class="section">
  <div class="container">
    <h1 class="title">New Server Certificate</h1>
    <%= form_for(@cert, url: server_certificates_path(@cert.ca_name)) do |f| %>
      <div class="field">
        <label class="label">
          Name
        </label>
        <p class="control">
          <%= f.text_field :name, class: "input", required: "required" %>
        </p>
      </div>
      <div class="field">
        <label class="label">
          Common Name
        </label>
        <p class="control">
          <%= f.text_field :common_name, class: "input", required: "required" %>
        </p>
      </div>
      <div class="field">
        <p class="control">
          <%= f.submit "Create", class: "button is-primary" %>
        </p>
      </div>
    <% end %>
  </div>
</section>
